{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "playback-engine",
  "version": "0.1.0",
  "identifier": "com.kimotech.playback-engine",
  "build": {
    "beforeDevCommand": "bun run nuxt:dev",
    "devUrl": "http://localhost:32030",
    "beforeBuildCommand": "bun run nuxt:generate",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "综合复盘软件",
        "width": 960,
        "height": 600,
        "minWidth": 960,
        "minHeight": 600,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
